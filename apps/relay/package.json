{
    "name": "relay",
    "module": "src/index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "bun --watch src/index.ts",
        "start": "bun dist/index.js",
        "build": "bun build src/index.ts --outdir dist --minify --target bun",
        "typecheck": "tsc --noEmit",
        "check": "biome check .",
        "fix": "biome check --write .",
        "play": "bun run serve -p 4000 ./playground.html"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.8",
        "@types/bun": "latest",
        "pino-pretty": "^13.1.3",
        "serve": "^14.2.5"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
        "pino": "^10.1.0",
        "zod": "^4.1.13"
    }
}
