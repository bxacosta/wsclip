{
  "compilerOptions": {
    // Target modern Cloudflare Workers runtime
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "ESNext"
    ],
    // Best-practice strictness
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    // Wrangler/esbuild compatibility
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    // Project-specific types generated by `wrangler types`
    "types": [
      "./worker-configuration.d.ts"
    ]
  }
}
